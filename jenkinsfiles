pipeline {
    agent any

    environment {
        IMAGE_NAME = 'myapp:latest' // Docker image name
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/Ishwarya-git-source/Ownimage.git' // Replace with your repository URL
            }
        }

        stage('Build Application') {
            steps {
                sh 'docker build -t ${IMAGE_NAME} .' // Build Docker image
            }
        }

        stage('Run Tests') {
            steps {
                sh 'docker run --rm ${IMAGE_NAME} go test ./...' // Run tests inside the container
            }
        }

        stage('Push to Registry') {
            steps {
                withDockerRegistry([credentialsId: 'docker-credentials', url: 'https://hub.docker.com/r/ishwarya2001/secondimage/tags']) {
                    sh 'docker push ${IMAGE_NAME}' // Push image to registry
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker run -d -p 8080:8080 ${IMAGE_NAME}' // Deploy the application
            }
        }
    }
}